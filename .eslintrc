{
    "extends": ["standard"],
    "ecmaFeatures": {
        "jsx": true,
    },
    "env": {
        "es6": true,
        "jest": true,
        "react-native/react-native": true
    },
    "plugins": ["react", "react-native", "prettier"],
    "rules": {
        "comma-dangle": [1, "always-multiline"],
        "comma-spacing": 1,
        "comma-style": 1,
        "indent": ["error", 4],
        "prettier/prettier": [
            1,
            {
                "singleQuote": true,
                "trailingComma": "all",
                "jsxBracketSameLine": true,
                "printWidth": 160,
                "tabWidth": 4
            }
        ],
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "semi": [1, 'always']
    }
}
